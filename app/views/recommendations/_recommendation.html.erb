<div>
        <p>
            <%= link_to recommendation.title, recommendation_path(recommendation) %>   
        </p>
        <p><%= recommendation.fandom %></p>
        <p><%= recommendation.summary %></p>
        <p><%= recommendation.author %></p>
        <p><%= recommendation.genre %></p>
        <p><%= recommendation.length %></p>
        <p><%= recommendation.rating %></p>
        <p><%= recommendation.complete %></p>
        <p><%= recommendation.username %></p>
        <p><%= link_to 'Edit', edit_recommendation_path(recommendation) if logged_in?(:site_admin) %></p>
        <p><%= link_to 'Delete', recommendation, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p>
</div>