<div class = "container">
  <div class="card text-left rec-card">
    <div class = card-header>
      <h4 class="card-title"><%= link_to recommendation.title, recommendation_path(recommendation) %></h4>
      <h6 class="card-subtitle mb-2 text-muted">By: <%= recommendation.author %></h6>
    </div>
      <div class="card-block">
        <p class="card-text">Pairings: <%= recommendation.pairings %></p>
        <p class="card-text">Summary: <%= recommendation.summary %></p>
        <div class="card-footer text-muted">
          <div class = "row">
            <div class = "col">
              Rated: <%= recommendation.rated %>
            </div>
            <div class = "col">
              Language: <%= recommendation.language %>
            </div>
            <div class = "col">
              Genre: <%= recommendation.genre %>
            </div>
            <div class = "col">
              Chapters: <%= recommendation.chapters %>
            </div>
            <div class = "col">
              Words: <%= recommendation.words %>
            </div>
            <div class = "col">
              Completed: <%= recommendation.complete %>
            </div>
            <div class = "col">
              Rec'd By: <%= current_user.first_name %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

          <p><%= link_to 'Edit', edit_recommendation_path(recommendation) if logged_in?(:site_admin) %></p>
          <p> <%= link_to 'Delete', recommendation, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p>

