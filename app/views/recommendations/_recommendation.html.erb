<div class = "container">
  <div class="card text-left rec-card">
    <div class = card-header>
      <h4 class="card-title"><%= link_to recommendation.title, recommendation_path(recommendation) %></h4>
      <h6 class="card-subtitle mb-2 text-muted">By: <%= recommendation.author %></h6>
      <h6 class="card-subtitle mb-2 text-muted">Pairings: <%= recommendation.pairings %></h6>
    </div>
      <div class="card-block">
        <p class="card-text"> <%= recommendation.summary %></p>
        <p class="card-text url-link"><a href= "<%=recommendation.url%>" target="_blank"> Read this fic </a></p>
        <div class="card-footer text-muted">
          <div class = "row">
            <div class = "col">
              Rated: <%= recommendation.rated %>
            </div>
            <div class = "col">
              Language: <%= recommendation.language %>
            </div>
            <div class = "col">
              Genre: <%= recommendation.genre %>
            </div>
            <div class = "col">
              Chapters: <%= recommendation.chapters %>
            </div>
            <div class = "col">
              Words: <%= recommendation.words %>
            </div>
            <div class = "col">
              Completed: <%= recommendation.complete %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
